<%- include('layout/header') %>

<div class="container py-5">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col text-center">
      <h1 class="fw-bold text-primary">User Management Dashboard</h1>
      <p class="text-muted">Easily manage user data with an intuitive and responsive interface</p>
    </div>
  </div>

  <!-- Alert Message -->
  <% if (message) { %>
    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
      <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
      <strong><%= message.message %></strong>
    </div>
  <% } %>

  <!-- User Table Section -->
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex flex-wrap justify-content-between align-items-center">
      <h5 class="mb-0">User List</h5>
      <a href="/add" class="btn btn-light btn-sm text-primary">
        <i class="fas fa-user-plus me-2"></i>Add User
      </a>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-4" id="userTable">
          <thead class="table-primary rounded">
            <tr class="bg-light">
              <th scope="col " class="py-3 text-uppercase small fw-bold text-muted">ID</th>
              <th scope="col" class="py-3 text-uppercase small fw-bold text-muted">Profile</th>
              <th scope="col" class="py-3 text-uppercase small fw-bold text-muted">Name</th>
              <th scope="col" class="py-3 text-uppercase small fw-bold text-muted">Email</th>
              <th scope="col" class="py-3 text-uppercase small fw-bold text-muted">Phone</th>
              <th scope="col" class="py-3 text-uppercase small fw-bold text-muted text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <img src="<%= user.image %>" alt="User Avatar" 
                       class="rounded-circle object-fit-cover" 
                       width="60 " height="60">
                </td>
                <td class="fw-medium"><%= user.name %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-envelope text-muted me-2"></i>
                    <%= user.email %>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-phone text-muted me-2"></i>
                    <%= user.phone %>
                  </div>
                </td>
                <td>
                  <div class="d-flex justify-content-center gap-2">
                    <a href="/edit/<%= user._id %>" 
                       class="btn btn-sm btn-outline-primary px-3">
                      <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a href="/delete/<%= user._id %>" 
                       class="btn btn-sm btn-outline-danger px-3"
                       onclick="return confirm('Are you sure you want to delete this user?')">
                      <i class="fas fa-trash me-1"></i>Delete
                    </a>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<%- include('layout/footer') %>
